@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Exercise"
       asp-action="List"
       class="nav-link dropdown-toggle show" data-toggle="dropdown">Exercises<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li class="dropdown-item">
                <a asp-controller="Exercise" asp-action="List"
                   asp-route-category="@category.Name">@category.Name</a>
            </li>
        }
        <li class="divider"></li>
        <li class="dropdown-item">
            <a asp-controller="Exercise" asp-action="List" asp-route-Category="">View all exercises</a>
        </li>
    </ul>
</li>